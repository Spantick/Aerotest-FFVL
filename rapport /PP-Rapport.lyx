\begin_inset Formula 
\begin{equation}
F\left(t\right)=\frac{1}{2}\rho SV^{2}\left(t\right)\sqrt{C_{x}^{2}\left(t\right)+C_{z}^{2}\left(t\right)}\label{eq:F}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
